{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "mml",
  "rules": {
    "source_file": {
      "type": "REPEAT",
      "content": {
        "type": "SYMBOL",
        "name": "_item"
      }
    },
    "_item": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "chord"
        },
        {
          "type": "SYMBOL",
          "name": "note_with_modifier"
        },
        {
          "type": "SYMBOL",
          "name": "octave_up"
        },
        {
          "type": "SYMBOL",
          "name": "octave_down"
        },
        {
          "type": "SYMBOL",
          "name": "octave_set"
        }
      ]
    },
    "chord": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "'"
        },
        {
          "type": "REPEAT1",
          "content": {
            "type": "SYMBOL",
            "name": "note_with_modifier"
          }
        },
        {
          "type": "STRING",
          "value": "'"
        }
      ]
    },
    "note_with_modifier": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "note"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "modifier"
            },
            {
              "type": "BLANK"
            }
          ]
        }
      ]
    },
    "note": {
      "type": "PATTERN",
      "value": "[cdefgabCDEFGAB]"
    },
    "modifier": {
      "type": "CHOICE",
      "members": [
        {
          "type": "STRING",
          "value": "+"
        },
        {
          "type": "STRING",
          "value": "-"
        }
      ]
    },
    "octave_up": {
      "type": "STRING",
      "value": "<"
    },
    "octave_down": {
      "type": "STRING",
      "value": ">"
    },
    "octave_set": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "o"
        },
        {
          "type": "PATTERN",
          "value": "[0-9]+"
        }
      ]
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": [],
  "reserved": {}
}